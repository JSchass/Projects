#define _CRT_SECURE_NO_WARNINGS

#include <stdio.h>
#include <math.h>
#define PI 3.14159 

int main(void)
{
	char plaintext_character = '\0';

	double sales_tax_rate = 0.0, item_cost = 0.0, length = 0.0, width = 0.0, height = 0.0;
	double x1 = 0.0, y1 = 0.0, x2 = 0.0, y2 = 0.0;

	float z = 0, x = 0, y = 0;

	int resistor1 = 0, resistor2 = 0, resistor3 = 0, shift_int = 0, constant1 = 3, constant2 = 17, a = 0;

	printf("Enter 3 resistor values as integers: ");
	scanf("%d%d%d", &resistor1, &resistor2, &resistor3);
	int resistor_sum = resistor1 + resistor2 + resistor3;
	printf("Total Series Resistance: resistor_sum = R1 + R2 + R3 = %d + %d + %d = %d\n", resistor1, resistor2, resistor3, resistor_sum);

	printf("Enter sales tax rate as a double: ");
	scanf("%lf", &sales_tax_rate);
	printf("Enter item cost as a double: ");
	scanf("%lf", &item_cost);
	double total_sales_tax = sales_tax_rate * item_cost;
	printf("Total Sales Tax %.2lf\n", total_sales_tax);

	printf("Enter length as a double: ");
	scanf("%lf", &length);
	printf("Enter width as a double: ");
	scanf("%lf", &width);
	printf("Enter height as a double: ");
	scanf("%lf", &height);
	double volume = (length * width * height) / 3;
	printf("Volume: %.2lf\n", volume);

	// This takes the resistance values from question 1
	double Total_parallel_resistance = 1 / (1 / (double)resistor1 + 1 / (double)resistor2 + 1 / (double)resistor3);
	printf("Total Parallel Resistance: %.2lf\n", Total_parallel_resistance);

	printf("Enter your plaintext character: ");
	scanf(" %c", &plaintext_character);
	printf("Enter your shift integer as a integer: ");
	scanf(" %d", &shift_int);
	int encoded_character = (plaintext_character - 'a') + 'A' - shift_int;
	printf("Encoded character: %c\n", encoded_character);

	printf("Enter point 1 (x1 y1) as a double: ");
	scanf("%lf%lf", &x1, &y1);
	printf("Enter point 2 (x2 y2) as a double: ");
	scanf("%lf%lf", &x2, &y2);
	double distance = sqrt(pow((x2 - x1), 2) + pow((y2 - y1), 2));
	printf("Distance: %.2lf\n", distance);

	//Inputting a as a value divisible by 2 will result in an error
	printf("Enter in the a value as a integer: ");
	scanf("%d", &a);
	printf("Enter in the z value as a float: ");
	scanf("%f", &z);
	printf("Enter in the x value as a float: ");
	scanf("%f", &x);
	printf("Enter in the y value as a float: ");
	scanf("%f", &y);
	float y_total = y / ((float)3 / (float)17) - z + x / (a % 2) + PI;
	printf("Y = %.2f\n", y_total);
	return 0;
}
